<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="vertical">

    <com.snow.yp.kgdemo.xfomade.rainbowactionbar.ActionBarBg
        android:id="@+id/action_bar_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_filter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_filter"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_fun_filter" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_text"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_fun_text_un" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_sticker"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_sticker"

                android:layout_width="23dp"
                android:layout_height="23dp"

                android:layout_centerInParent="true"
                android:src="@mipmap/icon_fun_sticker_un" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_graffiti"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_graffiti"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_fun_graffiti_un" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_edit"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_edit"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_fun_edit_un"

                />
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>